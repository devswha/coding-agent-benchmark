{
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "shared/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
